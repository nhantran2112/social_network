<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.blog_javacode">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Blog_javacode"
        android:usesCleartextTraffic="true">
        <activity
            android:screenOrientation="portrait"
            android:name=".home.SearchActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".person.EditInfoActivity"
            android:exported="false"
            android:theme="@style/Theme.Blog_javacode.noactionbar" />
        <activity
            android:screenOrientation="portrait"
            android:name=".store.CreateProductActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".home.PopupCreatePostActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:screenOrientation="portrait"
            android:name=".home.PostDetailActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".home.CmtPostActivity"
            android:exported="false"
            android:theme="@style/Theme.Blog_javacode.Popup" />
        <activity
            android:screenOrientation="portrait"
            android:name=".people.PersonDetailActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".store.ProductDeatilActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".article.ArticleDeatilActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>