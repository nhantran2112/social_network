<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/green_border"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/CVAva"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:padding="3dp"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/idIVAvaPersonPost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_logo" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh Ngan"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/CVAva"
            android:layout_margin="5dp"
            android:paddingTop="3dp"
            android:id="@+id/idTVNamePersonPost"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVNamePersonPost"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/CVAva"
            android:text="5 min"
            android:textSize="11sp"
            android:id="@+id/idTVTimePost"/>

        <TextView
            android:id="@+id/idbtndeletepost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_baseline_delete_outline_22" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVTimePost"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Hom nay la mot ngay rat la dep troi"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:id="@+id/idTVTextPost"/>

        <ImageView
            android:id="@+id/idIVImagePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVTextPost"
            android:layout_centerInParent="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:src="@mipmap/ic_logo" />

        <TextView
            android:id="@+id/idpositionIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVTextPost"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_position_iv"
            android:gravity="center"
            android:text="5/6"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/idTVReadCMT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idIVImagePost"
            android:paddingStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text=" Xem bình luận"
            android:textColor="@color/black"
            tools:ignore="RtlSymmetry"
            app:drawableStartCompat="@drawable/ic_baseline_chat_18" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>