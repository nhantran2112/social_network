<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/CVAva"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:padding="3dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/idIVAvaPersonCmtPost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_logo" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_toEndOf="@id/CVAva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="3dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh Ngan"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:paddingTop="3dp"
                android:id="@+id/idTVNamePersonCmtPost"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/idTVNamePersonCmtPost"
                android:text="5 min"
                android:textSize="11sp"
                android:layout_margin="5dp"
                android:paddingTop="3dp"
                android:id="@+id/idTVTimeCmtPost"/>

            <TextView
                android:id="@+id/idTVTextCmtPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idTVNamePersonCmtPost"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:paddingStart="3dp"
                android:text="Hom nay la mot ngay rat la dep troi"
                android:textColor="@color/black"
                android:textSize="13sp"
                tools:ignore="RtlSymmetry" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>